<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoiceActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/choice_bg" >

        <Button
            android:id="@+id/bt_choice_loacl"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_above="@+id/bt_choice_netplay"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bt_bg"
            android:text="单机游戏"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_choice_exit"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/bt_choice_netplay"
            android:layout_below="@+id/bt_choice_netplay"
            android:layout_marginTop="15dp"
            android:background="@drawable/bt_bg"
            android:text="退出"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bt_choice_netplay"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/bt_choice_loacl"
            android:layout_centerVertical="true"
            android:background="@drawable/bt_bg"
            android:text="蓝牙联机"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

    </RelativeLayout>

</FrameLayout>
